---
import BaseLayout from "../layouts/BaseLayout.astro";
import TerminalWindow from "../components/TerminalWindow.astro";

const title = "About";
const description = "About Me";

const skills = [
  "Python", "Go", "Git", "Docker", "Linux","JavaScript", "TypeScript", "Astro", "Tailwind", "Node.js"
];
---

<BaseLayout
  title={title}
  description={description}
  author="Sage"
  url="https://blog.sagec.fun/about"
>
  <div class="relative z-10 max-w-5xl mx-auto px-4 py-12 sm:py-24 space-y-20">
    
    {/* Header Section */}
    <section class="flex flex-col items-center space-y-8">
      <div class="relative group">
        <div class="absolute inset-0 rounded-full bg-gradient-to-tr from-red-600 to-black blur-xl opacity-70"></div>
        <img 
          id="sage-avatar"
          src="/sagec.jpeg"
          alt="Sage Avatar" 
          class="relative w-32 h-32 md:w-40 md:h-40 rounded-full border-2 border-white/10 shadow-2xl object-cover cursor-pointer transition-transform duration-700 ease-in-out"
        />
      </div>
      
      <div class="text-center space-y-3">
        <h1 class="text-4xl md:text-5xl font-bold tracking-widest -skew-x-12 transform flex justify-center items-center gap-1">
          <span class="bg-red-600 text-white px-3 py-1 block shadow-[4px_4px_0px_0px_rgba(255,255,255,1)] transform -rotate-2">S</span>
          <span class="bg-white text-black px-3 py-1 block shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] transform rotate-3 scale-110 z-10 font-black">A</span>
          <span class="bg-red-600 text-white px-3 py-1 block shadow-[4px_4px_0px_0px_rgba(255,255,255,1)] transform -rotate-1">G</span>
          <span class="bg-red-600 text-white px-3 py-1 block shadow-[4px_4px_0px_0px_rgba(255,255,255,1)] transform rotate-2">E</span>
        </h1>
      </div>
    </section>

    <script>
      const avatar = document.getElementById('sage-avatar');
      let rotation = 0;
      if (avatar) {
        avatar.addEventListener('click', () => {
          rotation += 360;
          avatar.style.transform = `rotate(${rotation}deg)`;
        });
      }
    </script>

    {/* Terminal Section */}
    <section class="py-8">
      <TerminalWindow title="root@sage:~">
        <div class="space-y-6 text-sm md:text-base">
          <div class="space-y-2">
            <div class="flex gap-2 text-zinc-300 font-bold">
              <span class="text-red-500">root@sage:~$</span>
              <span>whoami</span>
            </div>
            <div class="text-zinc-300 pl-4 border-l-2 border-white/5 ml-1">
              SageChen (WENHUI CHEN)
            </div>
          </div>

          <div class="space-y-2">
            <div class="flex gap-2 text-zinc-300 font-bold">
              <span class="text-red-500">root@sage:~$</span>
              <span>check -d 2026 --short</span>
            </div>
            <div class="text-zinc-300 pl-4 border-l-2 border-white/5 ml-1">
              北京邮电大学 / 人工智能 / MCPRL
            </div>
          </div>

          <div class="space-y-2">
            <div class="flex gap-2 text-zinc-300 font-bold">
              <span class="text-red-500">root@sage:~$</span>
              <span>open github</span>
            </div>
            <div class="pl-4 border-l-2 border-white/5 ml-1">
               <a href="https://github.com/Sagecheni" target="_blank" class="text-red-500 hover:text-blue-300 underline decoration-blue-400/30 underline-offset-4 transition-all">github.com/Sagecheni</a>
            </div>
          </div>
          
          <div class="flex gap-2 text-zinc-300 font-bold pt-2">
            <span class="text-red-500">root@sage:~$</span>
            <span class="animate-blink bg-zinc-400 w-2.5 h-5 block mt-0.5"></span>
          </div>
        </div>
      </TerminalWindow>
    </section>

    {/* Content Grid */}
    <div class="grid grid-cols-1 md:grid-cols-12 gap-6">
      
      {/* Milestones - Spans 7 columns */}
      <section class="md:col-span-7 p-8 bg-zinc-900/80 backdrop-blur-md border border-white/5 space-y-8 relative overflow-hidden" style="clip-path: polygon(0 0, 100% 2%, 100% 100%, 2% 100%);">
        
        <h2 class="text-2xl font-bold flex items-center gap-3">
          <span class="text-red-500">#</span> Milestones
        </h2>
        
        <div class="space-y-8 relative before:absolute before:inset-y-0 before:left-[7px] before:w-0.5 before:bg-zinc-800">
          
          <div class="relative pl-8">
            <div class="absolute left-0 top-1.5 w-4 h-4 rounded-full bg-zinc-900 border-2 border-red-500 z-10"></div>
            <div class="space-y-1">
              <div class="text-red-500 font-mono text-sm font-bold">2022 - now</div>
              <div class="text-zinc-300 font-medium">BUPT / 人工智能 / 本科</div>
              <p class="text-zinc-500 text-sm">正在学习人工智能，对LLM、多模态、AI-infra等感兴趣。</p>
            </div>
          </div>
          
          <div class="relative pl-8">
            <div class="absolute left-0 top-1.5 w-4 h-4 rounded-full bg-zinc-900 border-2 border-red-600 z-10"></div>
             <div class="space-y-1">
              <div class="text-red-400 font-mono text-sm font-bold">2014</div>
              <div class="text-zinc-300 font-medium">Hello World!</div>
              <p class="text-zinc-500 text-sm">Started playing with code.</p>
            </div>
          </div>
        </div>
      </section>

      {/* Right Column - Spans 5 columns */}
      <div class="md:col-span-5 space-y-6">
        
        {/* Doing */}
        <section class="p-8 bg-zinc-900/80 backdrop-blur-md border border-white/5 space-y-6 relative overflow-hidden" style="clip-path: polygon(2% 0, 100% 0, 98% 100%, 0% 100%);">
          
          <h2 class="text-xl font-bold flex items-center gap-3">
             <span class="text-red-400">#</span> What I do
          </h2>
          <ul class="space-y-4">
            <li class="flex items-start gap-3 text-zinc-400">
              <span class="mt-1.5 w-1.5 h-1.5 rounded-full bg-red-500"></span>
              <span>全栈开发</span>
            </li>
            <li class="flex items-start gap-3 text-zinc-400">
              <span class="mt-1.5 w-1.5 h-1.5 rounded-full bg-red-500"></span>
              <span>为NAS配置一点小服务，有意思的小工具</span>
            </li>
            <li class="flex items-start gap-3 text-zinc-400">
              <span class="mt-1.5 w-1.5 h-1.5 rounded-full bg-red-500"></span>
              <span>写点有意思的小文章</span>
            </li>
          </ul>
        </section>

        {/* Skills */}
        <section class="p-8 bg-zinc-900/80 backdrop-blur-md border border-white/5 space-y-6 relative overflow-hidden" style="clip-path: polygon(0 0, 100% 2%, 100% 98%, 2% 100%);">

          <h2 class="text-xl font-bold flex items-center gap-3">
             <span class="text-red-500">#</span> Skills
          </h2>
          <div class="flex flex-wrap gap-2">
            {skills.map((skill) => (
              <span class="px-3 py-1.5 rounded-lg bg-white/5 text-zinc-300 text-xs font-mono border border-white/5 cursor-default">
                {skill}
              </span>
            ))}
          </div>
        </section>

        
        {/* Contact */}
         <section class="p-8 bg-zinc-900/80 backdrop-blur-md border border-white/5 space-y-6 relative overflow-hidden" style="clip-path: polygon(2% 2%, 98% 0, 100% 100%, 0 98%);">
          
          <h2 class="text-xl font-bold flex items-center gap-3">
            <span class="text-red-500">#</span> Contact
          </h2>
          <div class="grid gap-3">
            <a href="mailto:sagecheni@outlook.com" class="flex items-center gap-4 p-3 rounded-xl bg-white/5 border border-white/5 transition-all">
              <div class="p-2 rounded-lg bg-red-500/10 text-red-500">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
              </div>
              <div class="flex flex-col">
                <span class="text-xs text-zinc-500 font-mono">Email</span>
                <span class="text-sm text-zinc-300">sagecheni@outlook.com</span>
              </div>
            </a>
            
             <a href="https://github.com/Sagecheni" target="_blank" class="flex items-center gap-4 p-3 rounded-xl bg-white/5 border border-white/5 transition-all">
              <div class="p-2 rounded-lg bg-blue-500/10 text-red-500">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0 3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>
              </div>
               <div class="flex flex-col">
                <span class="text-xs text-zinc-500 font-mono">GitHub</span>
                <span class="text-sm text-zinc-300">@Sagecheni</span>
              </div>
            </a>
          </div>
        </section>

      </div>
    </div>

  </div>
</BaseLayout>
