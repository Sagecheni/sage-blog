---
import BaseLayout from "../layouts/BaseLayout.astro";
import TerminalWindow from "../components/TerminalWindow.astro";

const title = "About";
const description = "About Me";

const confidants = [
  { name: "Python", rank: 5 },
  { name: "Go", rank: 3 },
  { name: "Git", rank: 4 },
  { name: "Docker", rank: 3 },
  { name: "Linux", rank: 4 },
  { name: "TypeScript", rank: 3 },
  { name: "Astro", rank: 2 },
  { name: "Node.js", rank: 2 },
];
---

<BaseLayout
  title={title}
  description={description}
  author="Sage"
  url="https://blog.sagec.fun/about"
>
  <div class="relative z-10 max-w-5xl mx-auto px-4 py-12 sm:py-24 space-y-20">
    
    {/* Header Section - WANTED Poster Style */}
    <section class="flex flex-col items-center space-y-8 py-12">
      <div class="relative group cursor-pointer perspective-1000">
        
        {/* WANTED Poster Frame */}
        <div class="absolute -inset-8 bg-[#d9191c] transform rotate-2 opacity-0 group-hover:opacity-100 transition-all duration-300 z-0" style="clip-path: polygon(2% 0, 100% 2%, 98% 100%, 0% 98%)"></div>
        <div class="absolute -inset-8 bg-black transform -rotate-1 scale-[0.98] opacity-0 group-hover:opacity-100 transition-all duration-300 z-0" style="clip-path: polygon(2% 0, 100% 2%, 98% 100%, 0% 98%)"></div>

        {/* WANTED Heading */}
        <div class="absolute -top-20 left-1/2 -translate-x-1/2 w-[160%] text-center z-20 opacity-0 group-hover:opacity-100 group-hover:translate-y-4 transition-all duration-300 delay-75 pointer-events-none">
             <span class="text-6xl md:text-7xl font-black text-[#d9191c] tracking-widest leading-none drop-shadow-[4px_4px_0_#000]" style="font-family: 'Bangers', cursive; -webkit-text-stroke: 2px white;">
               WANTED
             </span>
        </div>

        {/* Avatar Container */}
        <div class="relative w-32 h-32 md:w-40 md:h-40 z-30 transition-transform duration-500 group-hover:scale-110 group-hover:rotate-3">
             {/* Red Tint Overlay on Hover */}
             <div class="absolute inset-0 rounded-full bg-red-600/20 mix-blend-hard-light opacity-0 group-hover:opacity-100 transition-opacity z-20 pointer-events-none"></div>
             
             {/* Original Glow */}
             <div class="absolute inset-0 rounded-full bg-gradient-to-tr from-red-600 to-black blur-xl opacity-70 group-hover:opacity-0 transition-opacity"></div>
             
             <img 
              id="sage-avatar"
              src="/sagec.jpeg"
              alt="Sage Avatar" 
              class="relative w-full h-full rounded-full border-2 border-white/10 shadow-2xl object-cover transition-all duration-700 ease-in-out group-hover:border-4 group-hover:border-black group-hover:grayscale group-hover:contrast-125"
            />
            
            {/* Prisoner Number / Decoration on Hover */}
            <div class="absolute -bottom-6 -right-10 z-30 opacity-0 group-hover:opacity-100 transition-all duration-300 delay-100 transform rotate-12">
               <span class="bg-black text-white px-2 py-1 font-mono font-bold text-xs border border-white -skew-x-12 block shadow-[2px_2px_0_#d9191c]">
                 P.V. #001
               </span>
            </div>
        </div>

        {/* Name / Reward */}
        <div class="text-center mt-6 h-16 relative z-10">
           {/* Normal State Name */}
           <h1 class="text-4xl md:text-5xl font-bold tracking-widest -skew-x-12 transform flex justify-center items-center gap-1 transition-opacity duration-300">
              <span class="bg-red-600 text-white px-3 py-1 block shadow-[4px_4px_0px_0px_rgba(255,255,255,1)] transform -rotate-2">S</span>
              <span class="bg-white text-black px-3 py-1 block shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] transform rotate-3 scale-110 z-10 font-black">A</span>
              <span class="bg-red-600 text-white px-3 py-1 block shadow-[4px_4px_0px_0px_rgba(255,255,255,1)] transform -rotate-1">G</span>
              <span class="bg-red-600 text-white px-3 py-1 block shadow-[4px_4px_0px_0px_rgba(255,255,255,1)] transform rotate-2">E</span>
           </h1>
        </div>
      </div>
    </section>



    {/* Terminal Section */}
    <section class="py-8">
      <TerminalWindow title="root@sage:~">
        <div class="space-y-6 text-sm md:text-base">
          <div class="space-y-2">
            <div class="flex gap-2 text-zinc-300 font-bold">
              <span class="text-red-500">root@sage:~$</span>
              <span>whoami</span>
            </div>
            <div class="text-zinc-300 pl-4 border-l-2 border-white/5 ml-1">
              SageChen (WENHUI CHEN)
            </div>
          </div>

          <div class="space-y-2">
            <div class="flex gap-2 text-zinc-300 font-bold">
              <span class="text-red-500">root@sage:~$</span>
              <span>check -d 2026 --short</span>
            </div>
            <div class="text-zinc-300 pl-4 border-l-2 border-white/5 ml-1">
              北京邮电大学 / 人工智能 / MCPRL
            </div>
          </div>

          <div class="space-y-2">
            <div class="flex gap-2 text-zinc-300 font-bold">
              <span class="text-red-500">root@sage:~$</span>
              <span>open github</span>
            </div>
            <div class="pl-4 border-l-2 border-white/5 ml-1">
               <a href="https://github.com/Sagecheni" target="_blank" class="text-red-500 hover:text-blue-300 underline decoration-blue-400/30 underline-offset-4 transition-all">github.com/Sagecheni</a>
            </div>
          </div>
          
          <div class="flex gap-2 text-zinc-300 font-bold pt-2">
            <span class="text-red-500">root@sage:~$</span>
            <span class="animate-blink bg-zinc-400 w-2.5 h-5 block mt-0.5"></span>
          </div>
        </div>
      </TerminalWindow>
    </section>

    {/* Content Grid */}
    <div class="grid grid-cols-1 md:grid-cols-12 gap-6">
      
      {/* Milestones - Spans 7 columns */}
      <section class="md:col-span-7 p-8 bg-zinc-900/80 backdrop-blur-md border border-white/5 space-y-8 relative overflow-hidden" style="clip-path: polygon(0 0, 100% 2%, 100% 100%, 2% 100%);">
        
        <h2 class="text-2xl font-bold flex items-center gap-3">
          <span class="text-red-500">#</span> Milestones
        </h2>
        
        <div class="space-y-8 relative before:absolute before:inset-y-0 before:left-[7px] before:w-0.5 before:bg-zinc-800">
          
          <div class="relative pl-8">
            <div class="absolute left-0 top-1.5 w-4 h-4 rounded-full bg-zinc-900 border-2 border-red-500 z-10"></div>
            <div class="space-y-1">
              <div class="text-red-500 font-mono text-sm font-bold">2022 - now</div>
              <div class="text-zinc-300 font-medium">BUPT / 人工智能 / 本科</div>
              <p class="text-zinc-500 text-sm">正在学习人工智能，对LLM、多模态、AI-infra等感兴趣。</p>
            </div>
          </div>
          
          <div class="relative pl-8">
            <div class="absolute left-0 top-1.5 w-4 h-4 rounded-full bg-zinc-900 border-2 border-red-600 z-10"></div>
             <div class="space-y-1">
              <div class="text-red-400 font-mono text-sm font-bold">2014</div>
              <div class="text-zinc-300 font-medium">Hello World!</div>
              <p class="text-zinc-500 text-sm">Started playing with code.</p>
            </div>
          </div>
        </div>
      </section>

      {/* Right Column - Spans 5 columns */}
      <div class="md:col-span-5 space-y-6">
        
        {/* Doing */}
        <section class="p-8 bg-zinc-900/80 backdrop-blur-md border border-white/5 space-y-6 relative overflow-hidden" style="clip-path: polygon(2% 0, 100% 0, 98% 100%, 0% 100%);">
          
          <h2 class="text-xl font-bold flex items-center gap-3">
             <span class="text-red-400">#</span> What I do
          </h2>
          <ul class="space-y-4">
            <li class="flex items-start gap-3 text-zinc-400">
              <span class="mt-1.5 w-1.5 h-1.5 rounded-full bg-red-500"></span>
              <span>全栈开发</span>
            </li>
            <li class="flex items-start gap-3 text-zinc-400">
              <span class="mt-1.5 w-1.5 h-1.5 rounded-full bg-red-500"></span>
              <span>为NAS配置一点小服务，有意思的小工具</span>
            </li>
            <li class="flex items-start gap-3 text-zinc-400">
              <span class="mt-1.5 w-1.5 h-1.5 rounded-full bg-red-500"></span>
              <span>写点有意思的小文章</span>
            </li>
          </ul>
        </section>

        {/* Skills - Graffiti Sticker Style */}
        <section class="p-8 bg-zinc-900/80 backdrop-blur-md border border-white/5 space-y-8 relative overflow-hidden" style="clip-path: polygon(0 0, 100% 2%, 100% 98%, 2% 100%);">
          <h2 class="text-xl font-bold flex items-center gap-3">
             <span class="text-red-500">#</span> Skills
          </h2>
          
          <div class="flex flex-wrap justify-center gap-3 p-4">
            {confidants.map((skill, index) => {
              // Rotation Pattern: -3, 2, -1, 3...
              const rotation = [ '-rotate-3', 'rotate-2', '-rotate-1', 'rotate-3', '-rotate-2' ][index % 5];
              // Style Pattern: Black, White, Red...
              const styleType = index % 3;
              
              let bgClass = "bg-black text-white border-white/20";
              let rankColor = "bg-zinc-500";
              let activeRankColor = "bg-red-500";
              
              if (styleType === 1) { // White/Paper
                 bgClass = "bg-white text-black border-black shadow-[2px_2px_0_rgba(0,0,0,1)]";
                 rankColor = "bg-zinc-300";
                 activeRankColor = "bg-black";
              } else if (styleType === 2) { // Red/Stamp
                 bgClass = "bg-[#d9191c] text-white border-black shadow-[2px_2px_0_rgba(0,0,0,1)]";
                 rankColor = "bg-red-900";
                 activeRankColor = "bg-black";
              } else { // Black/Tape
                 bgClass = "bg-black text-white border-white shadow-[2px_2px_0_rgba(255,255,255,0.2)]";
                 rankColor = "bg-zinc-700";
                 activeRankColor = "bg-red-500";
              }

              return (
                <div class={`relative group px-3 py-1.5 border-2 ${bgClass} transform ${rotation} hover:scale-110 hover:z-10 hover:rotate-0 transition-all duration-300 cursor-default select-none`}>
                   <div class="flex flex-col items-center">
                      <span class="text-lg font-black tracking-widest leading-none" style="font-family: 'Bangers', cursive;">
                         {skill.name}
                      </span>
                      {/* Rank Dots */}
                      <div class="flex gap-1 mt-0.5">
                          {Array.from({ length: 5 }).map((_, i) => (
                             <div class={`w-1 h-1 rounded-full ${i < skill.rank ? activeRankColor : rankColor}`}></div>
                          ))}
                      </div>
                   </div>
                   {/* Tape Effect for Black items */}
                   {styleType === 0 && (
                      <div class="absolute -top-2 left-1/2 -translate-x-1/2 w-10 h-3 bg-white/20 -rotate-2 backdrop-blur-sm transform skew-x-12"></div>
                   )}
                </div>
              );
            })}
          </div>
        </section>

        
        {/* Contact */}
        {/* Contact - Calling Card Style (Fixed Overflow) */}
         <section class="relative group perspective-1000 py-4"> {/* Added py-4 to give space for floating elements */}
             {/* Wrapper handles rotation/scale for everything */}
            <div class="relative transform transition-transform duration-500 group-hover:rotate-1 group-hover:scale-[1.02]">
              
              {/* Main Card Body (Clipped) */}
              <div class="p-8 bg-[#d9191c] shadow-xl border-4 border-black border-dashed relative z-10" 
                   style="clip-path: polygon(2% 0, 98% 2%, 100% 98%, 0% 100%);">
                  <div class="space-y-4 relative z-10 pt-4">
                     <a href="mailto:sagecheni@outlook.com" class="block bg-black text-white p-3 transform -skew-x-6 hover:skew-x-0 transition-transform border-2 border-white hover:bg-white hover:text-black hover:border-black group/link">
                        <div class="flex items-center justify-between font-bold font-mono">
                          <span>SEND MAIL</span>
                          <span class="group-hover/link:animate-blink">_</span>
                        </div>
                        <div class="text-xs opacity-70 mt-1">sagecheni@outlook.com</div>
                     </a>
                     
                     <a href="https://github.com/Sagecheni" target="_blank" class="block bg-black text-white p-3 transform -skew-x-6 hover:skew-x-0 transition-transform border-2 border-white hover:bg-white hover:text-black hover:border-black group/link">
                        <div class="flex items-center justify-between font-bold font-mono">
                          <span>GITHUB</span>
                          <span class="group-hover/link:animate-blink">_</span>
                        </div>
                        <div class="text-xs opacity-70 mt-1">@Sagecheni</div>
                     </a>
                  </div>

                  {/* Decorative Spinner (Inside Card) */}
                  <div class="absolute bottom-2 right-2 opacity-50 pointer-events-none">
                     <svg width="60" height="60" viewBox="0 0 100 100" class="animate-spin-slow">
                        <path d="M50 0 L100 50 L50 100 L0 50 Z" fill="none" stroke="black" stroke-width="2"/>
                     </svg>
                  </div>
              </div>

               {/* Ransom Note Header (Outside Clipped Card, Higher Z-Index) */}
              <div class="absolute -top-4 -right-2 transform rotate-12 bg-black text-white px-4 py-2 font-black text-xl border-2 border-white shadow-lg z-20 pointer-events-none">
                CONTACT ME!!
              </div>
            </div>
         </section>

      </div>
    </div>

  </div>
</BaseLayout>
