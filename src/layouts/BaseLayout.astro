---
export interface Props {
  title: string;
  description: string;
  author: string;
  url: string;
  pubDate?: Date;
  isHome?: boolean;
  showBackground?: boolean;
  backgroundType?: 'home' | 'blog' | 'none';
}

import "@fontsource-variable/space-grotesk";
import "@fontsource/ibm-plex-mono";
import "@fontsource/bangers";
import "@fontsource/zcool-qingke-huangyou";
import "lxgw-wenkai-screen-web/lxgwwenkaigbscreen/result.css";
import Seo from "../components/Seo.astro";
import Header from "../components/Header.astro";
import P5RLoader from "../components/P5RLoader.astro";
import "../styles/global.css";
import { Image } from "astro:assets";
import homeBg from "../assets/images/character6.jpeg";

const { title, description, author, url, pubDate, showBackground = true, backgroundType } = Astro.props;

// Determine which background class to use
let bgClass = "";
if (backgroundType === 'home') {
  bgClass = "home-geometry";
} else if (backgroundType === 'blog') {
  bgClass = "blog-texture";
} else if (showBackground) {
  // Fallback for existing boolean prop
  bgClass = "home-geometry";
}
---

<!doctype html>
<html lang="zh-CN" dir="ltr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/p5-witch-hat.svg" />
    <meta name="generator" content={Astro.generator} />
    <Seo {title} {description} {author} {url} {pubDate} />
    <script is:inline>
      document.documentElement.classList.add("dark");
    </script>
  </head>
  <body class:list={["min-h-svh", bgClass]}>
    {/* Optimized Home Background with Overlay */}
    {bgClass === 'home-geometry' && (
      <div class="fixed inset-0 -z-10 select-none">
        <div class="absolute inset-0 z-10 bg-black/60"></div>
        <Image 
          src={homeBg} 
          alt="Persona 5 Royal Background" 
          class="w-full h-full object-cover"
          widths={[640, 1024, 1600, homeBg.width]}
          sizes={`(max-width: 640px) 640px, (max-width: 1024px) 1024px, (max-width: 1600px) 1600px, ${homeBg.width}px`}
          quality="mid"
          loading="eager"
          fetchpriority="high"
        />
      </div>
    )}
    <P5RLoader />
    <div class="body-margin flex flex-col min-h-svh">
      <Header />
      <main class="main-margin relative z-1 flex-1">
        <slot />
      </main>
    </div>
  </body>
</html>
