---
import Navigation from "./Navigation.astro";
import IconRss from "../assets/icons/rss.svg";
---

<header
  class="header-margin z-50 flex items-center justify-between"
>
  <a href="/" class="group flex items-center gap-0.5 select-none hover:opacity-90 transition-opacity">
    <span class="px-3 py-1 bg-accent text-white text-xl font-heading tracking-wider transform -skew-x-12 border-2 border-black group-hover:skew-x-0 transition-transform">
      Sage Forge
    </span>
    <span class="px-3 py-1 bg-black text-white text-xl font-heading tracking-wider transform -skew-x-12 border-2 border-white group-hover:skew-x-0 transition-transform relative z-10 -ml-2 shadow-md">
      贤者工坊
    </span>
  </a
  >
  <div class="flex items-center justify-center gap-6">
    <Navigation />

    <div class="flex items-center justify-center gap-4">
      <a href="/rss.xml" aria-label="rss" title="RSS" class="group relative flex items-center justify-center w-10 h-10">
         <!-- Star Container -->
        <div class="absolute inset-0 bg-black rotate-45 group-hover:rotate-180 transition-transform duration-500 border-2 border-gray-200 group-hover:border-black group-hover:bg-accent shadow-[2px_2px_0px_rgba(0,0,0,1)]"></div>
        <IconRss class="relative z-10 w-5 h-5 text-white group-hover:scale-110 transition-transform" />
      </a>
    </div>
  </div>
</header>
