---
import Navigation from "./Navigation.astro";
import IconRss from "../assets/icons/rss.svg";
---

<header
  class="header-margin z-50 flex items-center justify-between"
>
  <a
    href="/"
    class:list={[
      "text-xl tracking-wider select-none font-bold italic px-2 py-1 transform -skew-x-12",
      Astro.url.pathname === "/" ? "bg-accent text-white" : "bg-white text-black",
    ]}>Sage's Blog</a
  >
  <div class="flex items-center justify-center gap-6">
    <Navigation />

    <div class="flex items-center justify-center gap-4">
      <a href="/rss.xml" aria-label="rss" title="rss"
        ><IconRss class="active-foreground size-5" /></a
      >
    </div>
  </div>
</header>
