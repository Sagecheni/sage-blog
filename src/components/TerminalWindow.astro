---
interface Props {
  title?: string;
  class?: string;
}

const { title = "root@sage:~", class: className } = Astro.props;
---

<div class:list={["w-full max-w-3xl mx-auto rounded-xl overflow-hidden bg-zinc-900/90 backdrop-blur-xl border border-white/10 shadow-2xl font-mono text-sm sm:text-base ring-1 ring-white/5", className]}>
  <div class="bg-white/5 px-4 py-3 flex items-center gap-2 border-b border-white/5">
    <div class="flex gap-2">
      <div class="w-3 h-3 rounded-full bg-[#ff5f56] border border-black/10 hover:brightness-110 transition-all"></div>
      <div class="w-3 h-3 rounded-full bg-[#ffbd2e] border border-black/10 hover:brightness-110 transition-all"></div>
      <div class="w-3 h-3 rounded-full bg-[#27c93f] border border-black/10 hover:brightness-110 transition-all"></div>
    </div>
    {title && <div class="ml-4 text-zinc-400 text-xs select-none font-medium tracking-wide">{title}</div>}
  </div>
  
  <div class="p-6 text-zinc-300 space-y-4 font-mono leading-relaxed h-[500px] overflow-y-auto custom-scrollbar bg-black/20">
    <slot />
  </div>
</div>

<style>
  .custom-scrollbar::-webkit-scrollbar {
    width: 8px;
  }
  .custom-scrollbar::-webkit-scrollbar-track {
    background: transparent;
  }
  .custom-scrollbar::-webkit-scrollbar-thumb {
    background: #4b5563;
    border-radius: 4px;
  }
  .custom-scrollbar::-webkit-scrollbar-thumb:hover {
    background: #6b7280;
  }
</style>
