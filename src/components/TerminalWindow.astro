---
interface Props {
  title?: string;
  class?: string;
}

const { title = "root@sage:~", class: className } = Astro.props;
---

<div class:list={["w-full max-w-3xl mx-auto relative group", className]}>
  {/* P5R Decorative Background (Rectangular) */}
  <div class="absolute inset-0 bg-black border-2 border-zinc-500 translate-x-1 translate-y-1"></div>
  
  {/* Main Container */}
  <div class="relative bg-black border-2 border-white overflow-hidden">
    {/* P5R Header */}
    <div class="bg-red-600 px-4 py-2 flex items-center justify-between border-b-2 border-white relative overflow-hidden">
      {/* Texture for Header */}
      <div class="absolute inset-0 opacity-20 bg-[url('/noise.png')]"></div>
      {/* Title */}
      <div class="relative z-10 flex items-center gap-2">
        <span class="text-black font-black uppercase tracking-widest text-lg" style="font-family: 'Bangers', cursive;">
          OMNIPOTENT ORB
        </span>
        <span class="text-white/80 font-mono text-xs">
          // {title}
        </span>
      </div>

      {/* Stars Decoration */}
      <div class="flex gap-1">
        <span class="text-black text-xl animate-pulse">★</span>
        <span class="text-white text-xl animate-pulse delay-75">★</span>
        <span class="text-black text-xl animate-pulse delay-150">★</span>
      </div>
    </div>
    {/* Terminal Content */}
    <div class="p-6 text-zinc-300 space-y-4 font-mono leading-relaxed h-[500px] overflow-y-auto custom-scrollbar bg-zinc-900/50">
      <slot />
    </div>
  </div>
</div>

<style>
  /* P5R Red Scrollbar */
  .custom-scrollbar::-webkit-scrollbar {
    width: 12px;
  }
  .custom-scrollbar::-webkit-scrollbar-track {
    background: #000;
    border-left: 1px solid #333;
  }
  .custom-scrollbar::-webkit-scrollbar-thumb {
    background: #d8000c;
    border: 2px solid #000;
  }
  .custom-scrollbar::-webkit-scrollbar-thumb:hover {
    background: #ff0015;
  }
</style>
